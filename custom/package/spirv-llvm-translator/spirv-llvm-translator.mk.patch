+# reglinux define both host and targets
+HOST_SPIRV_LLVM_TRANSLATOR_DEPENDENCIES = llvm clang host-spirv-headers
 HOST_SPIRV_LLVM_TRANSLATOR_CONF_OPTS = \
 	-DLLVM_BUILD_TOOLS=ON \

include toolchain-gcc14-glibc.common
include reglinux-board.common

# Target definition (RV64GC, aka riscv64gc)
BR2_riscv=y
BR2_RISCV_64=y
BR2_RISCV_ISA_RVC=y
BR2_riscv_g=y
BR2_PACKAGE_SYSTEM_TARGET_JH7110=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char -mabi=lp64d -mcpu=sifive-u74"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_REGLINUX_PATH)/board/patches $(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/patches/riscv64 $(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_REGLINUX_PATH)/board/fsoverlay $(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_ZSTD=y

# Linux headers same as kernel, a 6.12 series
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_12=y

# Kernel - Version: 6.12.y dev
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="$(call github,starfive-tech,linux,JH7110_VF2_6.12_v5.14.0)/linux-JH7110_VF2_6.12_v5.14.0.tar.gz"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/linux-defconfig.config"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/reglinux/linux-defconfig-reglinux.config $(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/linux-defconfig-fragment.config"
BR2_LINUX_KERNEL_INSTALL_TARGET=y
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/linux_patches"

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="starfive/jh7110-starfive-visionfive-2-v1.2a starfive/jh7110-starfive-visionfive-2-v1.3b starfive/jh7110-milkv-mars"

# Custom CPIO dracut.conf for PVR firwmare
BR2_TARGET_ROOTFS_CPIO_DRACUT_CONF_FILES="$(BR2_EXTERNAL_REGLINUX_PATH)/board/starfive/jh7110/dracut.conf"

# use blob + patched mesa
BR2_PACKAGE_IMG_GPU_POWERVR=y
BR2_PACKAGE_IMG_MESA_3D=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_ES=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_EGL=y
#BR2_PACKAGE_IMG_MESA3D_OPENGL_GLX=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_SVGA=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_SWRAST=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_VIRGL=y
#BR2_PACKAGE_IMG_MESA3D_GALLIUM_DRIVER_PVR=y
#BR2_PACKAGE_IMG_MESA3D_VULKAN_DRIVER=y
#BR2_PACKAGE_IMG_MESA3D_VULKAN_DRIVER_PVR=y
#BR2_PACKAGE_MESA3D_DEMOS=y
#BR2_PACKAGE_LIBGLVND=y

# Graphics stack
BR2_PACKAGE_REGLINUX_WAYLAND=y
BR2_PACKAGE_REGLINUX_SWAY=y
BR2_PACKAGE_REGLINUX_XWAYLAND=y

# Bootloader
BR2_PACKAGE_UBOOT_VISIONFIVE2=y

# Filesystem
BR2_TARGET_ROOTFS_CPIO_LZ4=y

# Parallel build ON
BR2_PER_PACKAGE_DIRECTORIES=y


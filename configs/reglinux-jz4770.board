include toolchain-gcc13-musl.common
include reglinux-board.common

# Target definition
BR2_mipsel=y
BR2_mips_xburst=y
# BR2_MIPS_SOFT_FLOAT is not set
BR2_PACKAGE_BATOCERA_TARGET_JZ4770=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char"
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/reglinux/patches/gles $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/ingenic/jz4770/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/ingenic/jz4770/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_LZ4=y

# Musl needs separate libexecinfo
BR2_PACKAGE_LIBEXECINFO=y

# Bootloader
BR2_PACKAGE_UBIBOOT=y
BR2_PACKAGE_UBIBOOT_BOARDNAME="gcw0"
BR2_PACKAGE_MININIT=y

# Rust
#BR2_PACKAGE_HOST_RUST=y
#BR2_PACKAGE_HOST_RUST_BIN=n

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_LATEST_VERSION=y
BR2_LINUX_KERNEL_PATCH="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/ingenic/jz4770/linux_patches"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/ingenic/jz4770/linux-jz4770.config"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/ingenic/jz4770/linux-defconfig-fragment.config"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y
BR2_LINUX_KERNEL_IMAGE_TARGET_CUSTOM=y
BR2_LINUX_KERNEL_IMAGE_TARGET_NAME="uzImage.bin"
BR2_LINUX_KERNEL_IMAGE_NAME="uzImage.bin"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="ingenic/gcw0 ingenic/gcw0_proto ingenic/pocketgo2 ingenic/pocketgo2v2 ingenic/rg280m-v1.0 ingenic/rg280m-v1.1 ingenic/rg280v ingenic/rg300 ingenic/rg300x ingenic/rg350 ingenic/rg350m ingenic/rs97"
BR2_LINUX_KERNEL_INSTALL_TARGET=y

# GPU
BR2_PACKAGE_REGLINUX_ETNAVIV_MESA3D=y

# Filesystem tools
BR2_PACKAGE_HOST_DOSFSTOOLS=y
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_MTOOLS=y

# spi flash support
BR2_PACKAGE_MTD=y

# U-Boot stuff for kernel
#BR2_TARGET_UBOOT=y
#BR2_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
#BR2_TARGET_UBOOT_CUSTOM_VERSION=y
#BR2_TARGET_UBOOT_CUSTOM_VERSION_VALUE="2020.07"
#BR2_TARGET_UBOOT_BOARD_DEFCONFIG="ci20_mmc"
#BR2_TARGET_UBOOT_FORMAT_IMG=y
#BR2_TARGET_UBOOT_SPL=y
#BR2_TARGET_UBOOT_SPL_NAME="spl/u-boot-spl.bin"
BR2_PACKAGE_HOST_UBOOT_TOOLS=y
#BR2_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE=y
#BR2_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE_SOURCE="board/ci20/uboot-env.txt"
#BR2_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE_SIZE="32768"
#BR2_PACKAGE_UBOOT_TOOLS_FIT_SUPPORT=y
BR2_PACKAGE_HOST_UBOOT_TOOLS_FIT_SUPPORT=y

# Filesystem
BR2_TARGET_ROOTFS_CPIO_LZ4=y

include batocera-board.common

# Target definition (RV64GC+V, aka riscv64gc)
BR2_riscv=y
BR2_RISCV_64=y
BR2_RISCV_ISA_RVC=y
BR2_riscv_g=y
BR2_PACKAGE_BATOCERA_TARGET_BANANAPI_F3=y
BR2_TARGET_OPTIMIZATION="-pipe -fsigned-char -mabi=lp64d -march=rv64imafdv"
BR2_BINUTILS_VERSION_2_41_X=y
#BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_GLOBAL_PATCH_DIR="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/patches $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/riscv/bananapi-f3/patches"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/fsoverlay $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/riscv/bananapi-f3/fsoverlay"
BR2_TARGET_ROOTFS_SQUASHFS4_ZSTD=y

# Linux headers same as kernel, a 6.1 series
BR2_KERNEL_HEADERS_AS_KERNEL=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Kernel - Version: 6.1.y dev
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/BPI-SINOVOIP/pi-linux.git"
BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="linux-6.1.15-k1"
BR2_LINUX_KERNEL_DEFCONFIG="k1"
BR2_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/riscv/linux-defconfig-fragment.config $(BR2_EXTERNAL_BATOCERA_PATH)/board/batocera/riscv/bananapi-f3/linux-defconfig-fragment.config"
BR2_LINUX_KERNEL_INSTALL_TARGET=y
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Build the DTB from the kernel sources
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="spacemit/k1-x_evb spacemit/k1-x_MINI-PC spacemit/k1-x_MUSE-N1 spacemit/k1-x_MUSE-Pi"

# use blob + patched mesa
BR2_PACKAGE_IMG_GPU_POWERVR=y
BR2_PACKAGE_BATOCERA_WAYLAND_SWAY=y

# batocera splash screen
BR2_PACKAGE_REGLINUX_SPLASH_FFPLAY=y

# Bootloader
BR2_PACKAGE_UBOOT_BANANAPI_F3=y
BR2_PACKAGE_HOST_UBOOT_TOOLS_FIT_SUPPORT=y

+		break;
+	case DRM_FORMAT_MOD_VS_DEC_RASTER_256X2:
+	case DRM_FORMAT_MOD_VS_DEC_RASTER_128X4:
+	case DRM_FORMAT_MOD_VS_DEC_RASTER_512X1:

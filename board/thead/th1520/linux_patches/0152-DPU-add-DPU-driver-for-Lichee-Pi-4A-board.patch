+			"\tcrtc=%s\n"
+			"\tcrtc-pos=" DRM_RECT_FMT "\n"
+			"\tsrc-pos=" DRM_RECT_FP_FMT "\n"
+			"\trotation=%x\n"
+			"\tcolor-encoding=%s\n"
+			"\tcolor-range=%s\n",
+			plane->base.id, plane->name,
+			state->crtc ? state->crtc->name : "(null)",
+			DRM_RECT_ARG(&dest),
+			DRM_RECT_FP_ARG(&src),
+			state->rotation,
+			drm_get_color_encoding_name(state->color_encoding),
+			drm_get_color_range_name(state->color_range)
+			);
+	}
+	return len;
+}

+	case DRM_FORMAT_MOD_VS_DEC_RASTER_64X4:
+	case DRM_FORMAT_MOD_VS_DEC_RASTER_128X2:
+	case DRM_FORMAT_MOD_VS_DEC_TILE_16X16:
+	case DRM_FORMAT_MOD_VS_DEC_TILE_32X8:

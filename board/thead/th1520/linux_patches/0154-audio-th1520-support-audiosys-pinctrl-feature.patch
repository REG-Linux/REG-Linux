 static void __iomem *th1520_padcfg(struct th1520_pinctrl *thp,
 				   unsigned int pin)
 {
-	return thp->base + 4 * (pin / 2);
+	int width = __popcount(thp->mask_cfg);
+
+	return thp->base + thp->offset_cfg + 4 * (pin * width / 32);
 }
 

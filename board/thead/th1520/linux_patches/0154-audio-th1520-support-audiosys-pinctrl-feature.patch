+static unsigned int th1520_padcfg_shift(struct th1520_pinctrl *thp,
+					unsigned int pin)
 {
-	return 16 * (pin & BIT(0));
+	int width = __popcount(thp->mask_cfg);
+
+	return width * (pin & (32 / width - 1));
 }
 

#
# SoC / Rockchip basics
#
CONFIG_ARCH_ROCKCHIP=y
CONFIG_ARM64_VA_BITS_48=y
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_DW=y

#
# I2C / SPI / GPIO / PWM / RTC (used by DTS)
#
CONFIG_I2C=y
CONFIG_I2C_CHARDEV=y
CONFIG_SPI=y
CONFIG_GPIO_SYSFS=y
CONFIG_RTC_CLASS=y
CONFIG_RTC_DRV_HYM8563=y          # hym8563 external RTC

CONFIG_PWM=y
CONFIG_PWM_SYSFS=y
CONFIG_PWM_FAN=y                  # pwm-fan cooler
CONFIG_PWM_GPIO=y                 # "pwm-gpio" for vib motors
CONFIG_INPUT_PWM_VIBRA=y          # pwm-vibrator

#
# SAR ADC + external ADC (joystick / triggers / buttons)
#
CONFIG_IIO=y
CONFIG_IIO_BUFFER=y
CONFIG_IIO_TRIGGER=y
CONFIG_ROCKCHIP_SARADC=y          # &saradc
CONFIG_TI_ADS1015=y               # ti,ads1015 on i2c4

CONFIG_INPUT=y
CONFIG_INPUT_MATRIXKMAP=y
CONFIG_KEYBOARD_GPIO=y            # gpio-keys (ABXY, d-pad, etc.)
CONFIG_KEYBOARD_ADC=y             # adc-keys (volume up/down)
CONFIG_INPUT_ADC_JOYSTICK=y       # adc-joystick (sticks + analog triggers)

#
# Display / GPU (MIPI DSI panel + Mali-G610)
#
CONFIG_DRM=y
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_FBDEV_EMULATION=y

CONFIG_DRM_ROCKCHIP=y             # VOP2, DSI, etc. for rk3588/s
CONFIG_DRM_PANEL_BRIDGE=y
CONFIG_DRM_PANEL_HIMAX_HX8394=y   # used for "huiling,hl055fhav028c","himax,hx8399c" panel
CONFIG_DRM_PANTHOR=m              # Panthor for Mali-G610 on rk3588

CONFIG_BACKLIGHT_CLASS_DEVICE=y
CONFIG_BACKLIGHT_PWM=y            # pwm-backlight in DTS

#
# Touchscreen
#
CONFIG_INPUT_TOUCHSCREEN=y
CONFIG_TOUCHSCREEN_GOODIX=y       # goodix,gt911

#
# Audio: I2S0 + ES8388 codec + simple-audio-card + amps
#
CONFIG_SND=y
CONFIG_SND_SOC=y
CONFIG_SND_SOC_ROCKCHIP=y
CONFIG_SND_SOC_ES8328=y           # ES8388 is handled by ES8328 driver
CONFIG_SND_SOC_ES8328_I2C=y
CONFIG_SND_SIMPLE_CARD=y          # simple-audio-card
CONFIG_SND_SIMPLE_CARD_UTILS=y
CONFIG_SND_SIMPLE_AMPLIFIER=y     # simple-audio-amplifier (HP + speaker)

#
# LEDs
#
CONFIG_LEDS_CLASS=y
CONFIG_LEDS_GPIO=y                # gpio-leds (status + charging)

#
# Wi-Fi / BT (Ampak SDIO combo – assumed Broadcom; adjust if Realtek)
#
CONFIG_WLAN=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y

CONFIG_BRCMFMAC=m                 # brcmfmac SDIO Wi-Fi (common for Ampak modules)
CONFIG_BRCMFMAC_SDIO=y

CONFIG_BT=y
CONFIG_BT_HCIUART=y
CONFIG_BT_HCIUART_BCM=y           # Broadcom BT over UART (typical for Ampak)

#
# USB / Type-C / PD / OTG
#
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_DWC3=y
CONFIG_USB_DWC3_DUAL_ROLE=y
CONFIG_USB_ROLES_INTEL_XHCI=y

CONFIG_TYPEC=y
CONFIG_TYPEC_TCPM=y
CONFIG_TYPEC_FUSB302=y           # fcs,fusb302 Type-C controller
CONFIG_TYPEC_DP_ALTMODE=y
CONFIG_TYPEC_MUX_PI3USB30532=m   # if you use PI3USB mux; drop if not in Kconfig

CONFIG_USB_ROLE_SWITCH=y
CONFIG_USB_GADGET=y
CONFIG_USB_CONFIGFS=y
CONFIG_USB_CONFIGFS_F_FS=y

#
# Power / battery / charger / fuel-gauge
# (If some symbols don’t exist in 6.17, just drop them.)
#
CONFIG_POWER_SUPPLY=y
CONFIG_BATTERY_CW2015=y          # cellwise,cw2015 fuel gauge
CONFIG_CHARGER_BQ257XX=y         # ti,bq25703a charger (series name in recent trees)

#
# IMU
#
CONFIG_IIO_MPU6050=y             # Invensense MPU6880 is handled by the MPU6050 driver
CONFIG_IIO_MPU6050_I2C=y

#
# MMC/SD/SDIO
#
CONFIG_MMC=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_SDHCI=y
CONFIG_MMC_SDHCI_PLTFM=y
CONFIG_MMC_SDHCI_OF_DWCMSHC=y    # Rockchip SDHCI
CONFIG_MMC_SDHCI_IO_ACCESSORS=y
CONFIG_MMC_DW_ROCKCHIP=y         # optional, depending on base config

CONFIG_MMC_SDIO=y
CONFIG_MMC_SDHCI_ACPI=n          # keep it off if you don’t need ACPI

#
# Thermal (fan control via cooling-maps)
#
CONFIG_THERMAL=y
CONFIG_THERMAL_NETLINK=y
CONFIG_CPU_THERMAL=y
CONFIG_DEVFREQ_THERMAL=y
CONFIG_ROCKCHIP_THERMAL=y

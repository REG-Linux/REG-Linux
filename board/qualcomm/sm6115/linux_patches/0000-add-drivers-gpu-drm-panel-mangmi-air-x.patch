+static int bm5460bb1_prepare(struct drm_panel *panel)
+{
+	struct bm5460bb1 *ctx = to_bm5460bb1(panel);
+	int ret;
+
+	if (ctx->prepared)
+		return 0;
+
+	ret = bm5460bb1_send_cmds(ctx->dsi, bm5460bb1_on_cmds,
+				  ARRAY_SIZE(bm5460bb1_on_cmds));
+	if (ret < 0)
+		return ret;
+
+	ctx->prepared = true;
+
+	return 0;
+}
+
+static int bm5460bb1_enable(struct drm_panel *panel)
+{
+	struct bm5460bb1 *ctx = to_bm5460bb1(panel);
+	int ret;
+
+	if (ctx->enabled)
+		return 0;
+
+	ret = mipi_dsi_dcs_exit_sleep_mode(ctx->dsi);
+	if (ret < 0)
+		return ret;
+
+	msleep(120);
+
+	ret = mipi_dsi_dcs_set_display_on(ctx->dsi);
+	if (ret < 0)
+		return ret;
+
+	ctx->enabled = true;
+
+	return 0;
+}
+
+static int bm5460bb1_disable(struct drm_panel *panel)
+{
+	struct bm5460bb1 *ctx = to_bm5460bb1(panel);
+
+	if (!ctx->enabled)
+		return 0;
+
+	mipi_dsi_dcs_set_display_off(ctx->dsi);
+	msleep(20);
+	mipi_dsi_dcs_enter_sleep_mode(ctx->dsi);
+	msleep(100);
+
+	ctx->enabled = false;
+
+	return 0;
+}
+
+static int bm5460bb1_unprepare(struct drm_panel *panel)
+{
+	struct bm5460bb1 *ctx = to_bm5460bb1(panel);
+
+	ctx->prepared = false;
+
+	return 0;
+}

+static int bm5460bb1_send_cmds(struct mipi_dsi_device *dsi,
+			       const struct bm5460bb1_dsi_cmd *cmds,
+			       size_t count)
+{
+	size_t i;
+	int ret;
+
+	for (i = 0; i < count; i++) {
+		ret = mipi_dsi_dcs_write_buffer(dsi, cmds[i].data, cmds[i].len);
+		if (ret < 0)
+			return ret;
+	}
+
+	return 0;
+}

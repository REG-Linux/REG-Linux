+	ret = bm5460bb1_send_cmds(ctx, bm5460bb1_init_cmds,
+				  ARRAY_SIZE(bm5460bb1_init_cmds));
+	if (ret) {
+		bm5460bb1_power_off(ctx);
+		return ret;
+	}
+
+	ctx->prepared = true;
+	dev_dbg(dev, "prepare: init sequence complete\n");
+
+	return 0;
+}

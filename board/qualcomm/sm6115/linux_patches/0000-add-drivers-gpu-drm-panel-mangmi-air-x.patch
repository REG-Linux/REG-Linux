+static void bm5460bb1_remove(struct mipi_dsi_device *dsi)
+{
+	struct bm5460bb1 *ctx = mipi_dsi_get_drvdata(dsi);
+	struct device *dev = &dsi->dev;
+
+	dev_dbg(dev, "remove: detaching panel\n");
+	mipi_dsi_detach(dsi);
+	drm_panel_remove(&ctx->panel);
+}

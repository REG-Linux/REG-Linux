diff --git a/ucm2/Qualcomm/sm6115/HiFi-MangmiAirX.conf b/ucm2/Qualcomm/sm6115/HiFi-MangmiAirX.conf
new file mode 100644
index 0000000..430605d
--- /dev/null
+++ b/ucm2/Qualcomm/sm6115/HiFi-MangmiAirX.conf
@@ -0,0 +1,36 @@
+# Use case configuration for MANGMI Air X.
+
+SectionVerb {
+
+	EnableSequence [
+		cset "name='SEC_MI2S_RX Audio Mixer MultiMedia1' 1"
+	]
+
+	DisableSequence [
+		cset "name='SEC_MI2S_RX Audio Mixer MultiMedia1' 0"
+	]
+
+	Value {
+		TQ "HiFi"
+	}
+}
+
+SectionDevice."Headphones" {
+	Comment "Headphones Playback"
+
+	Value {
+		PlaybackPriority 200
+		PlaybackPCM "hw:${CardId},0"
+		PlaybackMixer "default:${CardId}"
+	}
+}
+
+SectionDevice."Speaker" {
+	Comment "Speaker Playback"
+
+	Value {
+		PlaybackPriority 100
+		PlaybackPCM "hw:${CardId},0"
+		PlaybackMixer "default:${CardId}"
+	}
+}
diff --git a/ucm2/Qualcomm/sm6115/MangmiAirX.conf b/ucm2/Qualcomm/sm6115/MangmiAirX.conf
new file mode 100644
index 0000000..427fa99
--- /dev/null
+++ b/ucm2/Qualcomm/sm6115/MangmiAirX.conf
@@ -0,0 +1,18 @@
+Syntax 4
+
+SectionUseCase."HiFi" {
+	File "/Qualcomm/sm6115/HiFi-MangmiAirX.conf"
+	Comment "HiFi quality Music."
+}
+
+BootSequence [
+	cset "name='SEC_MI2S_RX Audio Mixer MultiMedia1' 1"
+	cset "name='DAC' 80%"
+	cset "name='HPL' 80%"
+	cset "name='HPR' 80%"
+	cset "name='SPKL' 80%"
+	cset "name='SPKR' 80%"
+]
+
+Include.card-init.File "/lib/card-init.conf"
+Include.ctl-remap.File "/lib/ctl-remap.conf"

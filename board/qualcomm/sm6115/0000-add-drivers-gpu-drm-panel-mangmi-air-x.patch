+static int bm5460bb1_send_cmds(struct bm5460bb1 *ctx,
+			       const struct bm5460bb1_cmd *cmds,
+			       size_t count)
+{
+	size_t i;
+	int ret;
+
+	for (i = 0; i < count; i++) {
+		ret = bm5460bb1_send_cmd(ctx, &cmds[i], i);
+		if (ret)
+			return ret;
+	}
+
+	return 0;
+}

+	dev_dbg(dev, "disable: entering sleep\n");
+
+	ret = mipi_dsi_dcs_enter_sleep_mode(ctx->dsi);
+	if (ret < 0) {
+		dev_err(dev, "disable: enter sleep mode failed: %d\n", ret);

menuconfig BR2_PACKAGE_INTEL_CLC
	bool "intel-clc"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on !BR2_STATIC_LIBS
	depends on BR2_TOOLCHAIN_HAS_SYNC_1
	depends on BR2_TOOLCHAIN_HAS_THREADS_NPTL
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_8
	select BR2_PACKAGE_EXPAT
	select BR2_PACKAGE_LIBDRM
	select BR2_PACKAGE_ZLIB
	select BR2_PACKAGE_REGLINUX_LLVM        if BR2_PACKAGE_REGLINUX_LLVM_BUILD_FROM_SOURCE != "y"
	select BR2_PACKAGE_LLVM                 if !BR2_PACKAGE_REGLINUX_LLVM
	select BR2_PACKAGE_LLVM_RTTI            if !BR2_PACKAGE_REGLINUX_LLVM
	select BR2_PACKAGE_HOST_LLVM            if !BR2_PACKAGE_REGLINUX_LLVM
	select BR2_PACKAGE_HOST_LLVM_RTTI       if !BR2_PACKAGE_REGLINUX_LLVM
	select BR2_PACKAGE_PYTHON_PYCPARSER
	select BR2_PACKAGE_HOST_PYTHON_PYCPARSER
	help
	  Mesa 3D, an open-source implementation of the OpenGL
	  specification.

	  http://mesa3d.org

comment "intel-clc needs a toolchain w/ gcc >=8, C++, NPTL, dynamic library"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS_NPTL || \
		BR2_STATIC_LIBS || !BR2_TOOLCHAIN_GCC_AT_LEAST_8
	depends on BR2_TOOLCHAIN_HAS_SYNC_1

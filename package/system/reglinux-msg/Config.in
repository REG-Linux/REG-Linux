config BR2_PACKAGE_REGLINUX_MSG_BUILD_FROM_SOURCE
	bool "reglinux-msg-build-from-source"
	default n

config BR2_PACKAGE_REGLINUX_MSG
	bool "reglinux-msg"
	select BR2_PACKAGE_HOST_RUSTC_TARGET_ARCH_SUPPORTS	if BR2_PACKAGE_REGLINUX_MSG_BUILD_FROM_SOURCE
	select BR2_PACKAGE_HOST_RUSTC				if BR2_PACKAGE_REGLINUX_MSG_BUILD_FROM_SOURCE
	select BR2_PACKAGE_LIBDRM
	select BR2_PACKAGE_ZEROMQ
	select BR2_PACKAGE_GRIM					if BR2_PACKAGE_WAYLAND
	select BR2_PACKAGE_WF_RECORDER				if BR2_PACKAGE_WAYLAND && BR2_PACKAGE_PIPEWIRE
	help
	  Manages screen resolution and display settings

	  https://github.com/REG-Linux/regmsg
